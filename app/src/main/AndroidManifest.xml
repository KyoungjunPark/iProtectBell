<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rasberrymuffine.homecaresystemapp" >
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".JoinActivity"/>
        <activity android:name=".SettingActivity"/>
        <activity android:name=".JoinActivity_Administrator"/>
        <activity android:name=".LogActivity" android:theme="@style/Theme.AppCompat.Dialog"/>
        <activity android:name=".SpeakActivity" android:theme="@style/Translucent_Dialog"/>
        <activity android:name=".developInfo"/>

    </application>
    <!-- [START gcm_permission] -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- [END gcm_permission] -->

    <!-- [START gcm_receiver] -->
    <receiver
        android:name="com.google.android.gms.gcm.GcmReceiver"
        android:exported="true"
        android:permission="com.google.android.c2dm.permission.SEND">
        <intent-filter>
            <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            <category android:name="rasberrymuffine.homecaresystemapp" />
        </intent-filter>
    </receiver>
    <!-- [END gcm_receiver] -->

    <!-- [START gcm_listener_service] -->
    <service
        android:name="rasberrymuffine.homecaresystemapp.MyGcmListenerService"
        android:exported="false">
        <intent-filter>
            <action android:name="com.google.android.c2dm.intent.RECEIVE" />
        </intent-filter>
    </service>
    <!-- [END gcm_listener_service] -->

    <!-- [START instanceId_listener_service] -->
    <service
        android:name="rasberrymuffine.homecaresystemapp.MyInstanceIDListenerService"
        android:exported="false">
        <intent-filter>
            <action android:name="com.google.android.gms.iid.InstanceID" />
        </intent-filter>
    </service>
    <!-- [END instanceId_listener_service] -->

    <!-- [START gcm_registration_service] -->
    <service
        android:name="rasberrymuffine.homecaresystemapp.RegistrationIntentService"
        android:exported="false"/>
    <!-- [END gcm_registration_service] -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
</manifest>
