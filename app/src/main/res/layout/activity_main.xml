<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoView"
        android:layout_height="250dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"

        />
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/videoView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:id="@+id/callButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:text="신고"
            android:drawableRight="@drawable/siren"
            />
        <Button
            android:id="@+id/speakButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/callButton"
            android:text="음성"
            android:drawableRight="@drawable/sound"
            />
        <TextView
            android:id="@+id/doorText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Door"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/callButton"
            android:layout_alignLeft="@+id/callButton"
            />
        <Switch
            android:id="@+id/openSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="5dp"
            android:textOff="닫힘"
            android:textOn="열림"
            android:layout_below="@+id/doorText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/callButton"
            android:layout_alignEnd="@+id/callButton" />
        <Button
            android:id="@+id/logButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log  "
            android:layout_below="@+id/speakButton"
            android:layout_alignRight="@+id/speakButton"
            android:drawableRight="@drawable/log"
            />
    </RelativeLayout>
</RelativeLayout>