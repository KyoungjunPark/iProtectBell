<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:id="@+id/scrollView"
        android:layout_gravity="bottom"
        android:background="#00887a4d">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음량 조절"
                android:id="@+id/textVolumeControl"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:textColor="#f0000000"
                android:background="#00ffd2d7" />

            <FrameLayout
                android:layout_width="382dp"
                android:layout_height="54dp"
                android:layout_weight="1.69"
                android:layout_gravity="center_vertical"
                android:background="#fffdfe">

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/VolumeControlBar"
                    android:layout_column="0"
                    android:indeterminate="false"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="#00e7fff3" />

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.93"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림 방법"
                    android:id="@+id/textNoticeMethod"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#f0000000"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroup">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="팝업 알림"
                            android:id="@+id/popupRadioButton"
                            android:layout_marginLeft="60dp"
                            android:checked="true" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자동 앱 실행"
                            android:id="@+id/executionRadioButton"
                            android:layout_marginLeft="60dp" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신고 전화 번호"
                    android:id="@+id/textReportNumber"
                    android:textColor="#f0000000"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/inputPhoneNumber"
                    android:layout_below="@+id/textReportNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:gravity="center"
                    android:ems="10"
                    android:maxLength="10"
                    android:layout_marginRight="20dp"
                    android:layout_alignLeft="@+id/textReportNumber"
                    android:layout_alignStart="@+id/textReportNumber"
                    android:layout_toLeftOf="@+id/saveButton"
                    android:layout_toStartOf="@+id/saveButton" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저장"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/developerInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개발자 정보"
                    android:drawableLeft="@drawable/info"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="right|bottom" />

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
